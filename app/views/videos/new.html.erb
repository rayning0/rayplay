<div class='container'>
  <h1>New video</h1>

  <%= form_for @video do |f| %>
    <%= render 'shared/errors', object: @video %>

    <div class='form-group'>
      <%= f.label :link %>
      <%= f.text_field :link, class: 'form-control', required: true %>
      <span class='help-block'>A link to the YouTube video.</span>
    </div>

   <%= f.submit 'Add Video', class: 'btn btn-primary' %>
  <% end %>
</div>